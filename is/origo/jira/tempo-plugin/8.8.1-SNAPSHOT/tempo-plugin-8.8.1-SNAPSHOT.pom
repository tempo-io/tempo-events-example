                    <compressResources>false</compressResources>
                    <!--<systemPropertyVariables>-->
                    <!--<atlassian.mail.senddisabled>false</atlassian.mail.senddisabled>-->
                    <!--<atlassian.upm.on.demand>true</atlassian.upm.on.demand>-->
                    <!--</systemPropertyVariables>-->
                    <extractDependencies>false</extractDependencies>
                    <productVersion>${jira.version}</productVersion>
                    <productDataVersion>${jira.data.version}</productDataVersion>
                    <productDataPath>${generated.test.resources}</productDataPath>

                    <enableQuickReload>true</enableQuickReload>
                    <enableFastdev>false</enableFastdev>

                    <instructions>
                        <Spring-Context>*;timeout:=60</Spring-Context>

                        <Export-Package>
                            com.tempoplugin.timesheet.event.api;version="0.0",
                            com.tempoplugin.timesheet.approval.api;version="0.0"
                        </Export-Package>

                        <Import-Package>
