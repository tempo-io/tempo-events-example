        <dependency>
            <groupId>org.xmlunit</groupId>
            <artifactId>xmlunit-core</artifactId>
            <version>${xmlunit.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <profiles>
        <profile>
            <id>api-tests</id>
            <properties>
                <!-- When running the API tests it's best if the versions match to make the tests more stable -->
                <jira.version>7.1.9</jira.version>
                <jira.data.version>7.1.9</jira.data.version>
                <testkit.version>7.1.9</testkit.version>
            </properties>
        </profile>
        <profile>
            <id>docker</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.fabric8</groupId>
                        <artifactId>docker-maven-plugin</artifactId>
                        <version>0.18.1</version>
                        <configuration>
                            <logDate>default</logDate>
                            <autoPull>true</autoPull>
                            <images>
                                <image>
                                    <alias>postgres</alias>
                                    <name>postgres:9.4</name>
                                    <run>
                                        <env>
                                            <POSTGRES_DB>jiraServer</POSTGRES_DB>
                                        </env>
                                        <wait>
                                            <log>database system is ready to accept connections</log>
                                            <time>20000</time>
                                        </wait>
                                        <log>
                                            <prefix>DB</prefix>
                                            <color>yellow</color>
                                        </log>
                                    </run>
                                </image>

                                <!-- Image holding the artifact of this build -->
                                <image>
                                    <!-- Alias name which can used for linking containers during runtime -->
                                    <alias>service</alias>
                                    <name>temposoftware/${project.artifactId}-ts</name>

                                    <!-- ....................................... -->
                                    <!-- Build configuration for creating images -->
                                    <!-- ....................................... -->
                                    <build>
                                        <from>temposoftware/jira-connect:JIRA7.2.0-OD-05-023-AC1.1.86-TEMPO-02</from>
                                        <!-- Assembly descriptor holds the reference to the created artifact-->
                                        <assembly>
                                            <!--<descriptorRef>artifact-with-dependencies</descriptorRef>-->
                                            <descriptor>${basedir}/src/main/docker/assembly.xml</descriptor>
                                        </assembly>
                                        <!-- Expose ports -->
                                        <ports>
                                            <port>2990</port>
                                        </ports>

                                        <runCmds>
                                            <!--<run>cp /maven/db/dbconfig.xml /jira/amps-standalone/target/jira/home/</run>-->
                                            <run>cp /maven/libs/*.jar /jira/amps-standalone/target/jira/home/plugins/installed-plugins/</run>
                                            <run>cp /maven/libs/dependencies/*.jar /jira/amps-standalone/target/jira/home/plugins/installed-plugins/</run>
                                        </runCmds>

                                    </build>

                                    <!-- ............................................................... -->
                                    <!-- Runtime configuration for starting/stopping/linking containers -->
                                    <!-- ............................................................... -->
                                    <run>
                                        <!-- Assign dynamically mapped ports to maven variables (which can be reused in integration tests) -->
                                        <ports>
                                            <port>2990:2990</port>
                                        </ports>
                                        <wait>
                                            <!-- Check for this URL to return a 200 return code .... -->
                                            <url>http://localhost:2990/jira</url>
                                            <time>200000</time>
                                        </wait>
                                        <links>
                                            <link>postgres</link>
                                        </links>
                                        <log>
                                            <prefix>TS</prefix>
                                            <color>cyan</color>
                                        </log>
                                        <dependsOn>
                                            <dependsOn>postgres</dependsOn>
                                        </dependsOn>
                                    </run>
                                </image>
                            </images>
                        </configuration>

                        <!-- Hooking into the lifecycle -->
                        <executions>
                            <execution>
                                <id>start</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>build</goal>
                                    <goal>start</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>stop</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>stop</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <configuration>
                            <systemPropertyVariables>
                                <log.url>http://localhost:2990/jira</log.url>
                            </systemPropertyVariables>
                        </configuration>
                    </plugin>

                </plugins>
            </build>
        </profile>
    </profiles>
</project>
