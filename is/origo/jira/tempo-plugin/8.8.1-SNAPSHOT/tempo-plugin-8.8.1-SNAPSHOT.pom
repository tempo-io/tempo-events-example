                            com.tempoplugin.core.config.api*;version="0.0",
                            com.tempoplugin.core.customfield.internal*;version="0.0",
                            com.tempoplugin.core.datetime.api*;version="0.0",
                            com.tempoplugin.core.expense.api;version="0.0",
                            com.tempoplugin.core.global.configuration.services*;version="0.0",
                            com.tempoplugin.core.holiday.api*;version="0.0",
                            com.tempoplugin.core.issues.api*;version="0.0",
                            com.tempoplugin.core.license.api*;version="0.0",
                            com.tempoplugin.core.permission.api*;version="0.0",
                            com.tempoplugin.core.project.config.api*;version="0.0",
                            com.tempoplugin.core.rest.api*;version="0.0",
                            com.tempoplugin.core.rest.exception.mappers*;version="0.0",
                            com.tempoplugin.core.schemes.internal*;version="0.0",
                            com.tempoplugin.core.userschedule.api*;version="0.0",
                            com.tempoplugin.core.validation*;version="0.0",
                            com.tempoplugin.core.view.api*;version="0.0",
                            com.tempoplugin.core.workattribute.api*;version="0.0",
                            com.tempoplugin.core.workattribute.migrate*;version="0.0",
                            com.tempoplugin.core.workattribute.internal*;version="0.0",
                            com.tempoplugin.core.workload.api*;version="0.0",
                            <!-- Tempo Teams-->
                            com.tempoplugin.team.api;version="0.0",
                            com.tempoplugin.team.api.history;version="0.0",
                            com.tempoplugin.team.api.member;version="0.0",
                            com.tempoplugin.team.api.permission;version="0.0",
                            com.tempoplugin.team.api.request;version="0.0",
                            <!-- Tempo Planning API -->
                            com.tempoplugin.jira.plan.core.api;version="0.0",
                            com.tempoplugin.jira.plan.core.approvals;version="0.0",
                            com.tempoplugin.jira.plan.core.search.api;version="0.0",
                            <!-- Tempo Accounts -->
                            com.tempoplugin.accounts.account.api;version="0.0",
                            com.tempoplugin.accounts.attributes.api;version="0.0",
                            com.tempoplugin.accounts.permission.api;version="0.0",
                            com.tempoplugin.accounts.history.api;version="0.0",
                            com.tempoplugin.accounts.link.api;version="0.0",
                            com.tempoplugin.accounts.customfield.api;version="0.0",
                            com.tempoplugin.accounts.rates.api;version="0.0",
                            com.tempoplugin.accounts.search.api;version="0.0",
                            <!-- Tempo Platform -->
                            com.tempoplugin.platform.api.cache;version="0.0",
                            com.tempoplugin.platform.api.event;version="0.0",
                            com.tempoplugin.platform.api.i18n;version="0.0",
                            com.tempoplugin.platform.api.project;version="0.0",
                            com.tempoplugin.platform.api.security;version="0.0",
                            com.tempoplugin.platform.api.service;version="0.0",
                            com.tempoplugin.platform.api.time;version="0.0",
                            com.tempoplugin.platform.api.user;version="0.0",
                            com.tempoplugin.platform.api.notifications;version="0.0",
                            com.tempoplugin.platform.jira.issue.internal.service;version="0.0",
                            <!-- ignore compile scope packages -->
                            !org.apache.batik.*;version="0.0",
                            !org.jdom.*;version="0.0",
                            <!-- Everything else -->
                            *;resolution:="optional"
                        </Import-Package>
                    </instructions>
                    <bundledArtifacts>
                        <bundledArtifact>
                            <groupId>com.tempoplugin</groupId>
                            <artifactId>tempo-platform-api</artifactId>
                            <version>${tempo.platform.version}</version>
                        </bundledArtifact>
                        <bundledArtifact>
