    <version>${tempo.timesheet.version}</version>
    <name>Tempo Timesheets</name>
    <packaging>${packaging}</packaging>
    <description>Plugin to handle time registrations</description>
    <url>http://tempoplugin.com</url>
    <properties>
        <tempo.documentSpace>TEMPO</tempo.documentSpace>
        <!--
                  Change this property to compile your plugin against different JIRA
                  versions.
        -->
        <!-- or whichever SDK-supported product version you're using -->
        <sal.version>2.6.0</sal.version>
        <project.description>Tempo provides advanced yet simple time tracking, reporting, planning and allocation, handling of capitalized work, workflow and approval processes. Timesheets and reports for users, teams, project and clients. Comes with a robust API and Excel export to connect to any financial system.</project.description>
        <streams.version>5.0</streams.version>
        <plugin.version>3.2.0</plugin.version>
        <xmlunit.version>2.2.1</xmlunit.version>
        <httpcore.version>4.3.2</httpcore.version>
        <httpclient.version>4.3.5</httpclient.version>
        <upm.license.compatibility.version>2.18.5</upm.license.compatibility.version>
        <atlassian-scheduler-compat.version>1.0</atlassian-scheduler-compat.version>
        <sonar.sources>src/main</sonar.sources>
        <sonar.exclusions>src/main/resources/lib/**, src/main/resources/build/**</sonar.exclusions>
        <!-- testkit.version follows JIRA major version numbers, i.e. 6.x.x for JIRA 6, etc. 6.2.9 works with JIRA 6.2, other JIRA versions are fine with 6.5.8) -->
        <testkit.version>7.1.9</testkit.version>
        <quickreload.version>2.0.0</quickreload.version>
        <!-- putting generated test resources here so I can override the path from the command line -->
        <generated.test.resources>${basedir}/src/test/resources/generated-test-resources.zip</generated.test.resources>

        <packaging>atlassian-plugin</packaging>
    </properties>
